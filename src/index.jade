doctype html
html(lang="zh_CN")
    head
        include include/global-head
        link(rel="stylesheet", href="css/page/index.css")
        title 主页
    body
        #page
            include include/topbar
            include include/header
            #banner
                .back
                    .back-item.back-item1
                        .screen
                            img.erweima(src="http://img.la/100x100.png?s=二维码", alt="")
                    .back-item.back-item2
                    .back-item.back-item3
                .front
                    .screen
                        #search.form
                            a.switch.switch-login(href="#")
                            form(action="#")
                                legend 防伪查询
                                input.search-input.empty(type="text",placeholder="请输入智溯码进行查询")
                                button.search(type="submit") 查询
                        #login.form
                            a.switch.switch-search(href="#")
                            form(action="#")
                                legend 登录
                                input.username-input.empty(type="text",placeholder="用户名输入")
                                input.password-input.empty(type="password",placeholder="密码输入")
                                span.clear-username
                                p
                                button.login(type="submit") 登录
            #content
                .screen
                    .layout
                        .func
                            ul.clr
                                li.itts
                                    .func-box
                                        .icon
                                            h3 ITTS
                                        dl
                                            dt ITTS
                                            dd
                                                a(href="#") 真伪查询
                                            dd
                                                a(href="#") 渠道管理与防窜货
                                            dd
                                                a(href="#") 产品追踪与质量追溯
                                            dd
                                                a(href="#") 精确分销决策
                                        .more
                                            a(href="#") more&gt;&gt;
                                li.products
                                    .func-box
                                        .icon
                                            h3 产品介绍
                                        dl
                                            dt 产品介绍
                                            dd
                                                a(href="#") 防伪APP
                                            dd
                                                a(href="#") 电子标签
                                            dd
                                                a(href="#") 手持机
                                            dd
                                                a(href="#") 读写器
                                        .more
                                            a(href="#") more&gt;&gt;
                                li.solution
                                    .func-box
                                        .icon
                                            h3 解决方案
                                        dl
                                            dt 解决方案
                                            dd
                                                a(href="#") 消费品
                                        .more
                                            a(href="#") more&gt;&gt;
            include include/footer
        include include/global-js
        script(src="js/page/index.js")
